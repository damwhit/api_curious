<div class="container">
  <div class="row profile">
    <div class="col-md-4 col-md-offset-2 %>">
      <%= image_tag @user.image_url, class: "img-circle prof-img"%>
    </div>
    <div class="col-md-4 col-md-offset-1">
      <h1><%= @user.username %></h1>
      <h3><%= @user.name %></h3>
      <table class="table">
        <tr>
          <td>
            <%= @info.posts %> posts
          </td>
          <td>
            <%= @info.followers %> followers
           </td>
           <td>
            <%= @info.following %> following
           </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @media.each do |media| %>
      <div class="col-md-4 col-md-offset image-div" >
        <div class="row">
          <div class="col-xs-12">
            <%= link_to image_tag(media.image_url, class: "user-pics"), post_path(media.id) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
